<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="head.additional">
            <referenceBlock name="praffiliate_section_head" >
                 <action method="addPageType">
                    <argument name="page" xsi:type="string">product_page</argument>
                 </action>
            </referenceBlock>
       </referenceContainer>
       <referenceContainer name="after.body.start">
            <referenceBlock name="praffiliate_section_bodybegin" >
                <action method="addPageType">
                    <argument name="page" xsi:type="string">product_page</argument>
                 </action>
            </referenceBlock>
       </referenceContainer>
       <referenceContainer name="before.body.end">
            <referenceBlock name="praffiliate_section_bodyend" >
                 <action method="addPageType">
                    <argument name="page" xsi:type="string">product_page</argument>
                 </action>
            </referenceBlock>
       </referenceContainer>
    </body>
</page>
